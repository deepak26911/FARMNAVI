<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/main"
    android:layout_height="match_parent"
    android:background="@color/lightGreen">

    <!-- App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightGreen"
        app:navigationIcon="?attr/homeAsUpIndicator" >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="User Profile"
            android:textSize="22sp"
            android:layout_marginRight="28dp"
            android:textStyle="bold"
            android:textColor="#222222"
            android:paddingVertical="16dp"/>
    </com.google.android.material.appbar.MaterialToolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <!-- Profile Image -->
            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/profile"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:scaleType="centerCrop"/>

            <!-- Name and role -->
            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Appleseed"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#1B2742"
                android:gravity="center"/>

            <TextView
                android:id="@+id/profile_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Farmer"
                android:textColor="#949B97"
                android:textStyle="normal"
                android:textSize="16sp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="18dp"
                android:gravity="center"/>

            <!-- Profile Info Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="18dp"
                app:strokeWidth="0dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:background="@color/light_blue"
                    android:layout_height="wrap_content">

                    <!-- Name -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:background="@android:color/transparent">

                        <ImageView
                            android:src="@drawable/profile"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            app:tint="@color/black" />
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:paddingStart="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Name"
                                android:textColor="#949B97"
                                android:textSize="13sp"/>

                            <TextView
                                android:id="@+id/profile_name_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="John Appleseed"
                                android:textColor="#1B2742"
                                android:textSize="16sp"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/edit_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Edit"
                            android:textColor="#007AFF"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:paddingLeft="6dp"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F1F4F7"/>
                    <!-- Location -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:background="@android:color/transparent">

                        <ImageView
                            android:src="@drawable/baseline_location_on_24"
                            android:layout_width="28dp"
                            android:layout_height="28dp"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:paddingStart="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Location"
                                android:textColor="#949B97"
                                android:textSize="13sp"/>

                            <TextView
                                android:id="@+id/profile_location_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Salinas Valley, California"
                                android:textColor="#1B2742"
                                android:textSize="16sp"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/edit_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Edit"
                            android:textColor="#007AFF"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:paddingLeft="6dp"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F1F4F7"/>
                    <!-- Crops Grown -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:background="@android:color/transparent">

                        <ImageView
                            android:src="@drawable/baseline_email_24"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            app:tint="@color/black" />
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:paddingStart="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Email"
                                android:textColor="#949B97"
                                android:textSize="13sp"/>

                            <TextView
                                android:id="@+id/profile_email_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="xyz@gmail.com"
                                android:textColor="#1B2742"
                                android:textSize="16sp"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/edit_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Edit"
                            android:textColor="#007AFF"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:paddingLeft="6dp"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F1F4F7"/>
                    <!-- Soil Type -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:background="@android:color/transparent">

                        <ImageView
                            android:src="@drawable/baseline_local_phone_24"
                            android:tint="@color/black"
                            android:layout_width="28dp"
                            android:layout_height="28dp"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:paddingStart="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Phone Number"
                                android:textColor="#949B97"
                                android:textSize="13sp"/>

                            <TextView
                                android:id="@+id/profile_phone_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+9999999999"
                                android:textColor="#1B2742"
                                android:textSize="16sp"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/edit_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Edit"
                            android:textColor="#007AFF"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:paddingLeft="6dp"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>

    <!-- Logout Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_logout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="20dp"
        android:text="Log Out"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:backgroundTint="#D32F2F"
        app:cornerRadius="14dp"/>

</LinearLayout>
