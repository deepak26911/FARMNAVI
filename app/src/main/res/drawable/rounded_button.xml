<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/lightblue">  <!-- Ripple color -->

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/darkblue" /> <!-- Blue background -->
            <corners android:radius="16dp" />
            <padding
                android:left="16dp"
                android:top="12dp"
                android:right="16dp"
                android:bottom="12dp" />
        </shape>
    </item>

</ripple>
